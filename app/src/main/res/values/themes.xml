<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/colorWindowBg</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="LightText">
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>
</resources>